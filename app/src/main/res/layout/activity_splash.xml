<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="32dp"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <ImageView
        android:id="@+id/ic_splash_img"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191"
        app:srcCompat="@drawable/ic_github_img" />

    <ImageView
        android:id="@+id/ic_splash_text"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="@+id/ic_splash_img"
        app:layout_constraintStart_toStartOf="@+id/ic_splash_img"
        app:layout_constraintTop_toBottomOf="@+id/ic_splash_img"
        app:srcCompat="@drawable/ic_github_text" />

    <ProgressBar
        android:id="@+id/progress_splash"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintEnd_toEndOf="@+id/ic_splash_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ic_splash_text"
        app:layout_constraintTop_toBottomOf="@+id/ic_splash_text" />

</androidx.constraintlayout.widget.ConstraintLayout>